@model List<DataAccess.Models.File>
@{
    Layout = null;
}
@{if (Model.Count > 0)
    {
        <div class="form-group">
                @*<div class="form-group">*@
        @{using (Ajax.BeginForm("Refresh", "Files", null, new AjaxOptions
            {
                HttpMethod = "GET",
                InsertionMode = InsertionMode.Replace,
                UpdateTargetId = "SelectedFile",
            }))
            {
                    <div class="col-md-1">
                        <button class="btn btn-default"><span class="glyphicon glyphicon-refresh"></span></button>
                    </div>
                }
            }
                @*</div>*@  
            @foreach (var item in Model)
            {
                    <label class="col-md-2 control-label label-success labPad">@item.Name.@item.Type</label>
        }
            </div>
    }
    else
    {
        <fieldset>
            <div class="form-group">
                <label></label>
            </div>
        </fieldset>
    }
}
