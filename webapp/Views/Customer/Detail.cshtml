            $('#newCustomerCarrierButton').on('click', function() {
                $('#newCarrier').modal();
            });


            $('#newCarrier').on('shown.bs.modal', function() {
                $.validator.unobtrusive.parse('#newCustomerCarrierForm');
                var url = '@Url.Action("PopulateCarrierDropdown", "Customer")';
