                            </label>
                        </section>
                        <section class="col col-6">
                            <label class="input">
                                <i class="icon-prepend fa fa-address-card"></i>
                                @Html.TextBoxFor(model => model.Contact, new { placeholder = "Contact Information" })
                                @Html.ValidationMessageFor(model => model.Contact, "", new { @class = "text-danger" })
                            </label>
                        </section>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>

    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <button type="submit" class="btn btn-primary" id="contactSubmit">Save changes</button>
