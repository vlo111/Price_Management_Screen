        <div class="widget-body no-padding">

            <div id="new-contact-form" class="smart-form" novalidate="novalidate">

                <input id="CustomerContactId" name="CustomerContactId" type="hidden" value="0">

                <fieldset>
                    <div class="row">
                        <section class="col col-6">
                            <label>@Html.RadioButtonFor(model => model.ContactInfoTypeID, 1, new { id = "typePhone", Checked = "checked" }) <i class="fa fa-fw fa-lg fa-phone-square" title="Email"></i> Phone</label><br />
