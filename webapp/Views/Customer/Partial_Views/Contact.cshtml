    <span class="jarviswidget-loader"><i class="fa fa-refresh fa-spin"></i></span>
</header>

<!-- widget div-->
<div role="content">

    <!-- widget edit box -->
    <div class="jarviswidget-editbox">
        <!-- This area used as dropdown edit box -->

    </div>
    <!-- end widget edit box -->
    <!-- widget content -->
    <div class="widget-body no-padding">

        <div id="new-contact-form" class="smart-form" novalidate="novalidate">

            @*@Html.HiddenFor(model => model.CustomerID)*@

            <input id="Mode" name="Mode" type="hidden" value="new">
            <input id="CustomerID" name="CustomerID" type="hidden" value="0">
            <input id="CustomerContactID" name="CustomerContactID" type="hidden" value="0">

            <fieldset>
                <div class="row">
                    <section class="col col-6">
                        <label class="input">
                            <i class="icon-prepend fa fa-user"></i>
                            @Html.TextBoxFor(model => model.First, new { placeholder = Html.DisplayNameFor(n => n.First) })
                            @Html.ValidationMessageFor(model => model.First, "", new { @class = "text-danger" })
                        </label>
                    </section>
                    <section class="col col-6">
                        <label class="input">
                            <i class="icon-prepend fa fa-user"></i>
                            @Html.TextBoxFor(model => model.Last, new { placeholder = Html.DisplayNameFor(n => n.Last) })
                            @Html.ValidationMessageFor(model => model.Last, "", new { @class = "text-danger" })
                        </label>
                    </section>
                </div>

                <div class="row">
                    <section class="col col-6">
                        <label class="input">
                            @Html.TextBoxFor(model => model.JobTitle, new { placeholder = Html.DisplayNameFor(n => n.JobTitle) })
                            @Html.ValidationMessageFor(model => model.JobTitle, "", new { @class = "text-danger" })
                        </label>
                    </section>

                </div>

                <section>
                    <label class="textarea">
                        @Html.TextAreaFor(model => model.Notes, new { placeholder = Html.DisplayNameFor(n => n.Notes) })
                        @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
                    </label>
                </section>

            </fieldset>

        </div>

    </div>
    <!-- end widget content -->

</div>
<!-- end widget div -->

<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
<button type="submit" class="btn btn-primary" id="contactSubmit">Save changes</button>
